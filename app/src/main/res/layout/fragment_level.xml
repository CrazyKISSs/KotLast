<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="0sp"
    android:layout_marginVertical="100sp"
    android:background="@color/transparent"
    android:backgroundTint="@color/transparent"
    tools:context=".Level_Fragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="0sp"
        android:layout_marginTop="0sp"
        android:background="@color/transparent"
        android:backgroundTint="@color/transparent">

        <ImageView
            android:id="@+id/image_choise_level_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="45dp"
            android:layout_marginBottom="50dp"
            android:src="@drawable/level_image_1"
            app:layout_constraintBottom_toBottomOf="@id/imageView"
            app:layout_constraintEnd_toEndOf="@id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            android:contentDescription="TODO"
            app:layout_constraintTop_toTopOf="@+id/imageView" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="-20dp"
            android:layout_marginEnd="-20dp"
            android:layout_marginBottom="50dp"
            android:background="@color/transparent"
            android:backgroundTint="@color/transparent"
            android:contentDescription="TODO"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/fragment_choise_level_2"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/button_start_game"
            style="@style/Widget.Material3.BottomNavigationView"
            android:layout_width="0dp"
            android:layout_height="60sp"
            android:layout_marginStart="110sp"
            android:layout_marginEnd="110sp"
            android:background="@drawable/button_main"
            android:fontFamily="serif"
            android:text="@string/main_button_start"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/image_choise_level_fragment"
            app:layout_constraintVertical_bias="0.917" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Уровень 20"
            android:textColor="#151313"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/button_start_game"
            app:layout_constraintEnd_toEndOf="@+id/button_start_game"
            app:layout_constraintStart_toStartOf="@+id/button_start_game" />

        <Button
            android:id="@+id/back_from_level_fragment"
            android:layout_width="54dp"
            android:layout_height="51dp"
            android:layout_marginStart="232dp"
            android:layout_marginBottom="244dp"
            android:background="@color/transparent"
            android:backgroundTint="@color/transparent"
            android:foreground="@drawable/close"
            android:text="выйти"
            android:textColor="@color/transparent"
            app:layout_constraintBottom_toTopOf="@+id/button_start_game"
            app:layout_constraintStart_toStartOf="@+id/image_choise_level_fragment" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>